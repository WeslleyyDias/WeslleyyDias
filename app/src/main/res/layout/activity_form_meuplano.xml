<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FormMeuplano">

    <TextView
        android:id="@+id/title_meu_plano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_meuplano"
        android:textSize="50sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/title_acoes_plano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_acoes_meuplano"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/title_meu_plano"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btt_alterplano"
        style="@style/Button"
        android:text="Alterar Plano"
        app:layout_constraintTop_toBottomOf="@id/title_acoes_plano"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btt_apolice"
        style="@style/Button"
        android:text="Acionar Apolice"
        app:layout_constraintTop_toBottomOf="@id/btt_alterplano"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btt_cancelarplano"
        style="@style/Button"
        android:text="Cancelar Plano"
        app:layout_constraintTop_toBottomOf="@id/btt_apolice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <TextView
        android:id="@+id/info_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/duvidas"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@id/btt_cancelarplano"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton

        style="@style/Button"
        android:text="Voltar"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/info_info"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>