<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FormAcionarApolice">

    <TextView
        android:id="@+id/apolice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acionar Apolice"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/apolice1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_adc"
        app:layout_constraintTop_toBottomOf="@id/apolice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btt_apolice"
        style="@style/Button"
        android:text="Adicionar Arquivo"
        app:layout_constraintTop_toBottomOf="@id/apolice1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/apolice5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Central de Atendimento Para reportar ocorrido e solicitar acionamento"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="50dp"
        app:layout_constraintTop_toBottomOf="@id/btt_apolice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />

    <ImageView
        android:id="@+id/apolice2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_call"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/apolice5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/btt_apolice2"
        style="@style/Button"
        android:text="Suporte (SAC)"
        app:layout_constraintTop_toBottomOf="@id/apolice2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <androidx.appcompat.widget.AppCompatButton

        style="@style/Button"
        android:text="Voltar"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@id/btt_apolice2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>