<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".FormInfoCoberturas">

    <TextView
        android:id="@+id/cadc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coberturasADC"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/cadc2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_cobertura"
        app:layout_constraintTop_toBottomOf="@id/cadc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/cadc3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Informações e Inclusões"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cadc2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/cadc4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/coberturasADC2"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cadc3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/cadc5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coberturas Inclusas"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/cadc4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/cadc6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Rompimento de Tabulações"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="135dp"
        app:layout_constraintTop_toBottomOf="@id/cadc5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/cadc7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Danos/Eletronicos"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="220dp"
        app:layout_constraintTop_toBottomOf="@id/cadc6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/cadc8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Danos/Vendaval"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="240dp"
        app:layout_constraintTop_toBottomOf="@id/cadc7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/cadc9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Responsabilidade Civil"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="185dp"
        app:layout_constraintTop_toBottomOf="@id/cadc8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/cadc10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Perda ou Pagamento de Aluguel"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="100dp"
        app:layout_constraintTop_toBottomOf="@id/cadc9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/cadc11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Desmoronamento"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="230dp"
        app:layout_constraintTop_toBottomOf="@id/cadc10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/cadc12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Imovel Desabilitado"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="213dp"
        app:layout_constraintTop_toBottomOf="@id/cadc11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <TextView
        android:id="@+id/cadc13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="* Proteção Residencial"
        android:textSize="20sp"
        android:textColor="@color/purple_700"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:layout_marginRight="200dp"
        app:layout_constraintTop_toBottomOf="@id/cadc12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>